{
  "name": "did-hedera-api",
  "version": "0.0.1",
  "description": "REST API to manage Hedera DID Documents",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "lint": "eslint ./src/ --ext .ts --max-warnings 0",
    "prettier-write": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "npx tsc",
    "start": "node ./dist/src/index.js",
    "debug": "node --inspect-brk ./dist/src/index.js",
    "dev": "concurrently \"npx tsc -w\" \"nodemon dist/src/index.js\"",
    "tsoa-spec": "npx tsoa spec --yaml",
    "tsoa-routes": "npx tsoa routes"
  },
  "keywords": [
    "HEDERA",
    "DID",
    "REST",
    "API"
  ],
  "author": "Olivier Scherrer <olivier.scherrer@meranti.fr>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.1",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "tsoa": "^5.1.1"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  }
}
