{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}