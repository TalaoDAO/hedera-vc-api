{
  "entryFile": "src/index.ts",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "name": "access_token",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./authentication.ts"
  }
}